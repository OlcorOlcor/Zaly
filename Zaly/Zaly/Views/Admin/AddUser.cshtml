@model User
@{
	ViewData["Title"] = "Add User";
	Layout = "AdminLayout";
}

<form asp-action="AddUser" method="post">
	<div class="form-group">
		<label asp-for="Name">Name:</label>
		<input asp-for="Name" class="form-control" id="Name"/>
	</div>
	<div class="form-group">
		<label asp-for="Surname">Surname:</label>
		<input asp-for="Surname" class="form-control" id="Surname"/>
	</div>
	<div class="form-group">
		<label asp-for="TeamId">Team ID:</label>
		<input asp-for="TeamId" class="form-control" id="TeamId"/>
	</div>
	<div class="row">
		<div class="col-sm">
			<button class="btn btn-dark" style="width: 100%" button="button" asp-controller="Admin" asp-action="Index">Cancel</button>
		</div>
		<div class="col-sm">
			<button class="btn btn-dark" style="width: 100%" button="Submit">Add</button>
		</div>
	</div>	
</form>