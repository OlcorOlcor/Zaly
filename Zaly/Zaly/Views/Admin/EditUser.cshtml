@model User

@{
	ViewData["Title"] = "Edit User";
	Layout = "AdminLayout";
}

<form asp-action="Edit" method="post">
	<div class="form-group">
		<label asp-for="Id">ID:</label>
		<input class="form-control" asp-for="Id" disabled />
	</div>
	<div class="form-group">
		<label asp-for="Name">Name:</label>
		<input class="form-control" asp-for="Name" />
	</div>
	<div class="form-group">
		<label asp-for="Surname">Surname:</label>
		<input class="form-control" asp-for="Surname" />
	</div>
	<div class="form-group">
		<label asp-for="Nickname">Nickname:</label>
		<input class="form-control" asp-for="Nickname"/>
	</div>
	<div class="form-group">
		<label asp-for="Points">Points:</label>
		<input class="form-control" asp-for="Points"/>
	</div>
	<div class="form-group">
		<label asp-for="TeamId">Team ID:</label>
		<input class="form-control" asp-for="TeamId" />
	</div>
	<div class="row">
		<div class="col-sm">
			<button class="btn btn-dark" button="button" asp-controller="Admin" asp-action="Index">Cancel</button>
		</div>
		<div class="col-sm">
			<button class="btn btn-dark" button="submit">Edit</button>
		</div>
	</div>
</form>