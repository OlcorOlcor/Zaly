@model Question
@{
    ViewData["Title"] = "Add new Question";
    Layout = "AdminLayout";
}

<form asp-action="AddQuestion" method="post">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Text">Text:</label>
        <input asp-for="Text" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Points">Points:</label>
        <input asp-for="Points" class="form-control"/>
        <small>The amount of points the user will be awarded with upon successful completion</small>
    </div>
    <div class="form-group">
        <label asp-for="Multipart">Is the question Multipart?</label>
        <input asp-for="Multipart"/>
    </div>
    <div class="form-group">
        <label asp-for="Answer">Answer:</label>
        <input asp-for="Answer" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Image">Upload image to go along with the question (if it needs one)</label>
        <input asp-for="Image" class="form-control"/>
    </div>
    <div class="row">
        <div class="col-sm">
            <button button="button" class="btn btn-dark" style="width: 100%" asp-controller="Admin" asp-controller="Index">Cancel</button>
        </div>
        <div class="col-sm">
            <button button="submit" class="btn btn-dark" style="width: 100%">Add</button>
        </div>
    </div>
</form>